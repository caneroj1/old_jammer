.container-fluid
	.background
		.row.center-content.text-center
			.col-xs-12
				%h1
					Ready to Jam?
			- if !user_signed_in? 
				.col-xs-10.col-xs-offset-1.hold-em
					.col-xs-6.text-left.link
						=link_to "Sign Up", "#", id: "sign_up", :data => { toggle: "modal", target: "#sign_up" }
					.col-xs-6.text-right.link
						=link_to "Log In", "#", :data => {toggle: "modal" , target: "#log_in" }
			.col-xs-10.col-xs-offset-1
				= form_tag("/search", method: :get) do
					.form-group
						= text_field_tag :search, "", class: "form-control text-center big-form", placeholder: "Search by instrument..."
			- if user_signed_in?
				.col-xs-12.text-center
					=link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-danger log-out"