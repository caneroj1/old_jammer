- if show_avatar_upload?(musician)
	= form_for musician, url: upload_musician_path(musician), method: :post, html: { multipart: true } do |f|
		- if musician.errors.any?
			- musician.errors.values.each do |m|
				.form-group.errors= m[0]
		%p.form-helper.text-center
			You don't have a profile image. Upload one here:
		.form-group
			= f.file_field :avatar, class: "form-control avatar", data: {filename_placement: "inside" }
		.col-xs-8.col-xs-offset-2
			= f.submit 'Upload Image', class: "btn btn-primary btn-block"
- else
	.col-xs-12.for-avatar
		= image_tag musician.avatar_url, class: "img-circle"