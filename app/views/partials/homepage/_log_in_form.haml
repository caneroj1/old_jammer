.modal.fade{ id: "#{log_in_name}", tabindex: -1, role: "dialog" }
	.modal-dialog
		.modal-content
			.modal-header
				%button.close{ :data => { dismiss: "modal" } }
					%span.glyphicon.glyphicon-remove
					%span.sr-only Close
				%h2.text-center.modal-title Log In
			.modal-body
				.row
					.col-xs-6.col-xs-offset-3
						= form_for(@resource, as: @resource_name, url: session_path(@resource_name)) do |f|
							.form-group
								= f.label :email, for: :email
								= f.text_field :email, class: "form-control", id: :email
							.form-group
								= f.label :password, for: :password
								= f.text_field :password, class: "form-control", id: :password, type: :password
							- if @devise_mapping.rememberable?
								.form-group
									= f.check_box :remember_me
									= f.label :remember_me
							= f.submit 'Log In', class: "btn btn-info"
			.modal-footer
				.row
					.col-xs-12.text-center
						%h5
							Spot for an awesome musical fact! 